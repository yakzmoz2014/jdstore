<h2> 新增产品 </h2>

<%= simple_form_for [:admin, @product] do |f| %>

  <div class="group">
    <%= f.input :title, label: "产品名称" %>
  </div>

  <div class="group">
    <%= f.input :description, label: "产品描述" %>
  </div>

  <div class="group">
    <%= f.input :quantity, label: "产品数量" %>
  </div>

  <div class="group">
    <%= f.input :price, label: "产品价格" %>
  </div>

  <div class="group">
    <%= f.input :image, label: "上传图片", as: :file %>
  </div>

  <%= f.submit "提交", class: "btn btn-primary", data: { disable_with: "Submitting..." } %>

<% end %>
